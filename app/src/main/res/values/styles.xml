<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Edit Text Styles -->
    <style name="form_edit_texts">
        <item name="android:background">@drawable/form_edit_text_background</item>
        <item name="android:textColorHint"> ?android:textColorSecondary</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="form_buttons">
        <item name="android:background">@drawable/form_buttons_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Styles -->
    <style name="form_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="form_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
</resources>